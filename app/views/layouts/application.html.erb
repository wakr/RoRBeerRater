<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navibar">
        <%= link_to 'breweries', breweries_path %>
        <%= link_to 'beers', beers_path %>
        <%= link_to 'ratings', ratings_path %>
        <%= link_to 'users',  users_path%>
        <%= link_to 'clubs', beer_clubs_path%>
      |
        <%= link_to current_user.username, current_user if current_user%>
        <%= link_to 'rate a beer', new_rating_path if current_user%>
        <%= link_to 'join a club', new_membership_path if current_user%>

        <%= link_to 'sign in', signin_path unless current_user%>
        <%= link_to 'sign up', signup_path unless current_user%>
        <%= link_to 'sign out', signout_path, method: :delete if current_user%>
      <!--
      <% if not current_user.nil? %>
          <p><%= current_user.username %> signed in</p>
      <% end %>
      //-->
<%= yield %>

</body>
</html>
