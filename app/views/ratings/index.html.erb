<p>Recent ratings:</p>

<ul class="list-group">
  <% @ratings.recent.each do |rating| %>
      <li class="list-group-item"> <%= rating if rating.beer %> <%= link_to rating.user.username, rating.user if rating.user%> at <%=rating.created_at%></li>
  <% end %>
</ul>

