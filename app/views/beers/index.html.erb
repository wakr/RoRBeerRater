

<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer if beer%></td>
        <td><%= link_to beer.style.name, beer.style if beer %></td>
        <td><%= link_to beer.brewery.name, beer.brewery if beer.brewery %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) if beer %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } if beer%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path) unless current_user.nil? %>

