<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.username, user %>
        </td>
        <td>

          <%= link_to "ban", ban_user_path(user.id),method: :post, class: "btn btn-warning" if current_user and current_user.admin%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

